{{define "style"}}
<style>
body {
}
</style>
{{end}}
{{define "content"}}
<div>
	<h1>Login</h1>	
	<form action='/login{{.ReturnURL}}' method='post'>
		<label for="email">Email</label>
		<input 
			id="email" 
			name="email"
			type="email" 
			placeholder="Enter email" 
			required/>

		<label for="password">Password</label>
		<input 
			id="password" 
   			name="password"
			type="password" 
			placeholder="Enter password (min 8 characters)" 
			minlength='8' 
			required/>

		<button type="submit">Login</button>
	</form>
</div>
{{end}}
